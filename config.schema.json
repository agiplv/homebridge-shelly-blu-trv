{
  "pluginAlias": "ShellyBluTRV",
  "pluginType": "platform",
  "schema": {
    "type": "object",
    "properties": {
      "enableAutoDiscovery": {
        "type": "boolean",
        "title": "Enable Auto-Discovery",
        "description": "Automatically discover Shelly BLU Gateways and TRVs on your network using mDNS. Discovered devices will be merged with manual configuration.",
        "default": true
      },
      "gateways": {
        "type": "array",
        "title": "Shelly BLU Gateways",
        "description": "Manually configure gateways and TRVs. Auto-discovered devices will use default names (TRV <id>) unless specified here.",
        "items": {
          "type": "object",
          "properties": {
            "host": {
              "type": "string",
              "title": "Gateway IP / Hostname",
              "required": true
            },
            "pollInterval": {
              "type": "number",
              "title": "Polling interval (seconds)",
              "default": 60,
              "minimum": 15
            },
            "devices": {
              "type": "array",
              "title": "TRV devices",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "number", "title": "TRV ID", "required": true },
                  "name": { "type": "string", "title": "Display name" }
                },
                "required": ["id"]
              }
            }
          }
        }
      }
    }
  }
}

