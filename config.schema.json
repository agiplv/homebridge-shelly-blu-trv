{
  "pluginAlias": "ShellyBluTRV",
  "pluginType": "platform",
  "schema": {
    "type": "object",
    "properties": {
      "gateways": {
        "type": "array",
        "title": "Shelly BLU Gateways",
        "items": {
          "type": "object",
          "properties": {
            "host": {
              "type": "string",
              "title": "Gateway IP / Hostname",
              "required": true
            },
            "pollInterval": {
              "type": "number",
              "title": "Polling interval (seconds)",
              "default": 60,
              "minimum": 15
            },
            "devices": {
              "type": "array",
              "title": "TRV devices (required)",
              "minItems": 1,
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "number", "title": "TRV ID", "required": true },
                  "name": { "type": "string", "title": "Display name" }
                },
                "required": ["id"]
              }
            }
          }
        }
      }
    }
  }
}
