{
  "name": "homebridge-shelly-blu-trv",
  "displayName": "Shelly BLU TRV",
  "version": "1.0.10",
  "description": "Homebridge plugin for Shelly BLU TRV thermostats via Shelly BLU Gateway Gen3",
  "license": "MIT",
  "author": "agiplv",
